@model WebOrogolden.Models.Citas

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (TempData["msj"] != null)
{
    <div class="alert alert-danger">@TempData["msj"]</div>
}

<div>
    <form>
        <table>
            <tr>
                <th>Nombre</th>
                <td>
                    <input type="text" name="Nombre" value="" class="form-control" placeholder="nombre" />
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>
                    <input type="text" name="Email" value="" class="form-control" placeholder="email" />
                </td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>
                    <input type="text" name="Telefono" value="" class="form-control" placeholder="teléfono" />
